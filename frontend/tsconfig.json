{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#components/*": ["src/components/*"],
      "#layouts/*": ["src/layouts/*"],
      "#libraries/*": ["src/libraries/*"],
      "#services/*": ["src/services/*"],
      "#types/*": ["src/types/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".eslintrc.cjs",
    "**/*.astro",
    "**/*.cjs",
    "**/*.mjs",
    "**/*.ts", "**/*.tsx", 
  ],
}