---
import NavigationItem from '#components/header/navigation-item.astro';
import { headerStore } from '#stores/header-store';

const { navigationItems } = headerStore.get();
---

<nav class="header__navigation">
  <ul class="header__navigation-list">
    {
      navigationItems.map(({
        page: { pageTitle, slug },
      }) => (
        <NavigationItem url={slug}>
          { pageTitle }
        </NavigationItem>
      ))
    }
  </ul>
</nav>

<style lang="scss">
  .header {
    &__navigation {
      @screen lg {
        @apply mb-8 mt-8;
      }
    }

    &__navigation-list {
      @apply flex gap-10;

      @screen lg {
        @apply flex-col gap-10 items-center;
      }
    }
  }
</style>
